@page
@model webProject.Pages.compileModel
@{
    ViewData["Title"] = "Online Compiler";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/compileStyles.css">
    <link rel="stylesheet" href="~/css/ideStyles.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="~/js/compiler/lib/ace.js"></script>
    <script src="~/js/compiler/lib/theme-monokai.js"></script>
    <script src="~/js/compiler/ide.js"></script>
    <script src="~/js/compilerScripts.js"></script>
<style>
    body {
        background-color: #1a001f;
        color: #f8f9fa;
    }

    .container-fluid {
        padding: 2rem;
    }

    .left-section, .right-section {
        background-color: #2c003e;
        padding: 1.5rem;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .left-section {
        width: 70%; 
    }

    .right-section {
        width: 30%; 
        display: flex;
        flex-direction: column;
    }

    .editor {
        height: 500px;
        border-radius: 8px;
        background: #1a1a1a;
        color: #f8f9fa;
    }

    .button-container {
        margin-top: 1rem;
        text-align: right;
    }

    .btn {
        background-color: #8a2be2;
        color: #f8f9fa;
        border: none;
        padding: 0.5rem 1rem;
        font-size: 1rem;
        border-radius: 4px;
    }

    .btn:hover {
        background-color: #7a1ede;
    }

    .output {
        margin-top: 1rem;
        background: #1a1a1a;
        padding: 1rem;
        border-radius: 8px;
        color: #f8f9fa;
        height: 200px;
        overflow-y: auto;
    }

    .chat-container {
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .chat-box {
        flex: 1;
        background: #1a1a1a;
        padding: 1rem;
        border-radius: 8px;
        margin-bottom: 1rem;
        overflow-y: auto;
        max-height: 300px; 
    }

    #chat-input {
        background: #2c003e;
        color: #f8f9fa;
        border: none;
        padding: 0.5rem;
        border-radius: 4px;
        width: calc(100% - 80px);
        margin-right: 8px;
    }

    #chat-input::placeholder {
        color: #bbb;
    }

    .chat-container button {
        background-color: #8a2be2;
        color: #f8f9fa;
        border: none;
        padding: 0.5rem 1rem;
        font-size: 1rem;
        border-radius: 4px;
    }

    .chat-container button:hover {
        background-color: #7a1ede;
    }

</style>


</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-9 left-section">
                <div class="editor" id="editor">
                </div>
                <div class="button-container">
                    <button class="btn" onclick="executePythonCode()">Run</button>
                </div>
                <div class="output" id="output"></div>
            </div>
            <div class="col-md-3 right-section">
                <div class="chat-container">
                    <div class="chat-box" id="chat-box">
                    </div>
                    <div class="d-flex">
                        <input type="text" id="chat-input" placeholder="Type a message...">
                        <button onclick="sendMessage()">Send</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
