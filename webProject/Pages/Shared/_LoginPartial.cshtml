@using Microsoft.AspNetCore.Identity
@using webProject.Data
@using webProject.Models;

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="nav navbar-nav navbar-right">
    @if (SignInManager.IsSignedIn(User))
    {
        <li>
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
                <button type="submit" class="btn btn-custom navbar-btn navbar-link">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li><a asp-area="Identity" asp-page="/Account/Login" class="btn btn-custom navbar-btn navbar-link">Login</a></li>
        <li><a asp-area="Identity" asp-page="/Account/Register" class="btn btn-custom navbar-btn navbar-link">Register</a></li>
    }
</ul>
