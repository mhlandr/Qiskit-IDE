@page
@model webProject.Pages.Courses.CourseCreateModel
@{
    ViewData["Title"] = "Create Course";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #1a001f; 
            color: #f8f9fa;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .form-container {
            background: #2c003e; 
            padding: 2.5rem; 
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 800px; 
        }

        .form-control {
            background: #3e005a;
            color: #f8f9fa;
            font-size: 1.2rem; 
        }

            .form-control:focus {
                background: #310047;
                color: #f8f9fa;
            }

        .control-label {
            color: #f8f9fa;
            font-size: 1.2rem; 
        }

        .text-danger {
            color: #ff6b6b;
        }

        .btn-primary {
            background-color: #3e005a;
            border: none;
            font-size: 1.2rem; 
        }

            .btn-primary:hover {
                background-color: #310047;
            }
    </style>
</head>
<body>
    <div class="form-container">
        <h1>@ViewData["Title"]</h1>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Course.CourseName" class="control-label"></label>
                <input asp-for="Course.CourseName" class="form-control" />
                <span asp-validation-for="Course.CourseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.Description" class="control-label"></label>
                <textarea asp-for="Course.Description" class="form-control"></textarea>
                <span asp-validation-for="Course.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.Content" class="control-label"></label>
                <textarea asp-for="Course.Content" class="form-control"></textarea>
                <span asp-validation-for="Course.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.StartDate" class="control-label"></label>
                <input asp-for="Course.StartDate" class="form-control" />
                <span asp-validation-for="Course.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.EndDate" class="control-label"></label>
                <input asp-for="Course.EndDate" class="form-control" />
                <span asp-validation-for="Course.EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
