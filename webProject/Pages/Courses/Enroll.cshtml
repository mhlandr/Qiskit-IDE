@page
@model webProject.Pages.Courses.EnrollModel
@{
    ViewData["Title"] = "Enroll in Course";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/Enroll.css">

</head>
<body>
    <div class="form-container">
        <h1>@ViewData["Title"]</h1>

        @if (User.Identity.IsAuthenticated)
        {
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div> 
                <div class="form-group">
                    <label for="CourseId" class="control-label">Select a Course</label>
                    <select id="CourseId" name="CourseId" class="form-control">
                        @foreach (var course in Model.Courses)
                        {
                            <option value="@course.CourseId">@course.CourseName</option>
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Enroll</button>
            </form>
        }
        else
        {
            <p>You must be logged in to enroll in a course. <a asp-page="/Account/Login">Login</a></p>
        }
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
